<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgc1"
    tools:context=".screen.GroupManagementScreen">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_management"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/icon_arrow_back" />

    <EditText
        android:id="@+id/edit_text_new_member"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="70dp"
        android:layout_below="@+id/toolbar_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/button_add_member"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_management"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_bg"
        android:src="@drawable/icon_add"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view_group_management"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_delete_group"
        android:layout_below="@+id/edit_text_new_member"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>
    <ImageButton
        android:layout_margin="20dp"
        android:padding="5dp"
        android:id="@+id/button_delete_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:src="@drawable/icon_group_delete"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>