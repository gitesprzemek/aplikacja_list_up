<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pz.zrobseliste">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Zrobseliste">
        <activity
            android:name=".screen.GroupsScreen"
            android:exported="false" />
        <activity
            android:name=".screen.MainScreen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.AllTasksScreen" />
        <activity android:name=".screen.LoginScreen" />
        <activity android:name=".screen.RegistrationScreen" />
        <activity android:name=".screen.MenuScreen" />
        <activity android:name=".screen.AboutCreatorsScreen" android:parentActivityName=".screen.MenuScreen"/>
        <activity android:name=".screen.SettingsScreen" android:parentActivityName=".screen.MenuScreen"/>
        <activity android:name=".screen.GroupManagementScreen" android:parentActivityName=".screen.GroupsScreen"/>
    </application>

</manifest>